<?xml version="1.0" encoding="UTF-8"?>

<type name="TaskStep1">
    <form>
        <elements>
            <subject>
                <type>Text</type>
                <options>
                    <label>Тема письма</label>
                    <required>1</required>
                    <validators>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>6</min>
                                <max>500</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </subject>
            <from>
                <type>Select</type>
                <options>
                    <label>От</label>
                    <required>1</required>
                    <multioptions>
                        <noreply>noreply@snob.ru</noreply>
                        <snob>snob@snob.ru</snob>
                        <info>info@snob.ru</info>
                    </multioptions>
                    <description>От какого ящика будет отравленно послание</description>
                </options>
            </from>
            <body_html>
                <type>TinyMCE</type>
                <options>
                    <label>HTML</label>
                    <required>1</required>
                    <validators>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>10</min>
                                <max>500</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </body_html>
            <body_plain>
                <type>Textarea</type>
                <required>1</required>
                <options>
                    <label>Текст</label>
                    <description>на случай, если письмо будут смотреть в текстовом режиме</description>
                    <validators>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>10</min>
                                <max>500</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </body_plain>
            <submit>
                <type>submit</type>
                <options>
                    <value>next</value>
                    <label>Перейти к следующему шагу - выбору пользователей</label>
                </options>
            </submit>
<!--
            <prev>
                <type>submit</type>
                <options>
                    <value>prev</value>
                    <label>Перейти к предыдущему шагу - выбору шаблона</label>
                </options>
            </prev>
-->
            <reset>
                <type>reset</type>
                <options>
                    <value>reset</value>
                    <label>Сбросить внесенные изменения</label>
                </options>
            </reset>
        </elements>

    </form>

</type>
