<?xml version="1.0" encoding="UTF-8"?>

<type name="Template">
    <dataSource>
        <method>TemplateGetter</method>
    </dataSource>
    <dataStore>
        <method>TemplateSetter</method>
    </dataStore>
    <dataRemove>
        <method>TemplateRemover</method>
    </dataRemove>

    <form>
        <messages>
            <save>Изменения внесены в шаблон "%name%"!</save>
        </messages>
        <elements>
            <id>
                <type>Hidden</type>
                <name>id</name>
            </id>
            <name>
                <type>Text</type>
                <options>
                    <label>Название шаблона</label>
                    <required>1</required>
                    <validators>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>6</min>
                                <max>200</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </name>
            <subject>
                <type>Text</type>
                <options>
                    <label>Тема письма</label>
                    <required>1</required>
                    <validators>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>6</min>
                                <max>500</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </subject>
            <from>
                <type>SelectFromModel</type>
                <options>
                    <label>От</label>
                    <required>1</required>
                    <sourceModel>
                        <name>FromWho</name>
                        <collection>list</collection>
                    </sourceModel>
                    <description>От какого ящика будет отравленно послание</description>
                </options>
            </from>
            <body_html>
                <type>TinyMCE</type>
                <options>
                    <label>HTML</label>
                    <required>1</required>
                </options>
            </body_html>
<!--
            <body_plain>
                <type>Textarea</type>
                <required>1</required>
                <options>
                    <label>Текст</label>
                    <description>на случай, если письмо будут смотреть в текстовом режиме</description>
                    <validators>
                        <strlen>
                            <validator>StringLength</validator>
                            <options>
                                <min>10</min>
                                <max>500</max>
                            </options>
                        </strlen>
                    </validators>
                </options>
            </body_plain>
-->
            <submit>
                <type>submit</type>
                <options>
                    <value>save</value>
                    <label>Сохранить</label>
                </options>
            </submit>
            <reset>
                <type>reset</type>
                <options>
                    <value>reset</value>
                    <label>Отменить</label>
                </options>
            </reset>
        </elements>
    </form>
</type>
